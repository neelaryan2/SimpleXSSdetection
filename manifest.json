{
	"manifest_version": 2,

	"name": "XSSdetector",
	"description": "Blocks webpages involving XSS injection through GET or POST requests.",
	"version": "1.0",

	"background": {
		"scripts": ["background.js"]
  	},

  	"permissions": [
		"storage",
		"declarativeContent",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
  	],

  	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/get_started16.png",
			"32": "images/get_started32.png",
			"48": "images/get_started48.png",
			"128": "images/get_started128.png"
	    }
  	},
  
  	"icons": {
	    "16": "images/get_started16.png",
	    "32": "images/get_started32.png",
	    "48": "images/get_started48.png",
	    "128": "images/get_started128.png"
  	}

}